<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gyane.wifiintensitymeasurement.OutputActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send"
        android:id="@+id/sendButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/serverIpField"
        android:layout_below="@+id/sendButton"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/sendButton"
        android:layout_alignStart="@+id/sendButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Server ip"
        android:id="@+id/serverIpLabel"
        android:layout_below="@+id/sendButton"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tag"
        android:id="@+id/tagLabel"
        android:layout_below="@+id/serverIpField"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tagField"
        android:layout_below="@+id/serverIpField"
        android:layout_alignEnd="@+id/serverIpField"
        android:layout_alignStart="@+id/serverIpField" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/placeField"
        android:layout_below="@+id/tagField"
        android:layout_alignEnd="@+id/tagField"
        android:layout_alignStart="@+id/tagField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Place"
        android:id="@+id/locationLabel"
        android:layout_below="@+id/tagField"
        android:layout_alignParentStart="true" />
</RelativeLayout>
